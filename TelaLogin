<body>
  <div class="panel">
    <h1>Champion Dreams</h1>
    <p class="desc">Entre na plataforma que conecta jogadores e boosters de FPS online. 
      Aqui você encontra suporte seguro, intermediação confiável e 
      oportunidades para subir de nível com estilo.</p>

    <form id="loginForm" onsubmit="return false;">
      <div>
        <label for="role">Tipo de Usuário</label>
        <select id="role" required>
          <option value="" disabled selected>Selecione...</option>
          <option value="cliente">Cliente (login com E-mail)</option>
          <option value="booster">Booster (login com CPF)</option>
        </select>
      </div>
      <div id="emailContainer" style="display:none;">
        <label for="email">E-mail (Cliente)</label>
        <input id="email" type="email" placeholder="seu@exemplo.com" />
      </div>
      <div id="cpfContainer" style="display:none;">
        <label for="cpf">CPF (Booster)</label>
        <input id="cpf" type="text" placeholder="000.000.000-00" pattern="\\d{3}\\.\\d{3}\\.\\d{3}-\\d{2}" />
      </div>
      <div>
        <label for="password">Senha</label>
        <input id="password" type="password" placeholder="••••••••" required minlength="6" />
      </div>
      <button id="loginBtn">Entrar</button>
      <div class="actions">
        <label style="display:flex;align-items:center;gap:6px"><input type="checkbox"/> Lembrar-me</label>
        <a href="#" class="link">Esqueci a senha</a>
      </div>
      <div class="footer-text">
        Não tem conta? <a href="#" class="link">Criar conta</a>
      </div>
    </form>
  </div>

  <script>
    const roleSelect = document.getElementById('role');
    const emailContainer = document.getElementById('emailContainer');
    const cpfContainer = document.getElementById('cpfContainer');
    const emailInput = document.getElementById('email');
    const cpfInput = document.getElementById('cpf');

    roleSelect.addEventListener('change',()=>{
      if(roleSelect.value === 'cliente'){
        emailContainer.style.display = 'block';
        cpfContainer.style.display = 'none';
        emailInput.required = true;
        cpfInput.required = false;
      } else if(roleSelect.value === 'booster'){
        cpfContainer.style.display = 'block';
        emailContainer.style.display = 'none';
        cpfInput.required = true;
        emailInput.required = false;
      } else {
        emailContainer.style.display = 'none';
        cpfContainer.style.display = 'none';
      }
    });

    document.getElementById('loginBtn').addEventListener('click',()=>{
      const role = roleSelect.value;
      const pass = document.getElementById('password').value;
      const email = emailInput.value;
      const cpf = cpfInput.value;

      if(!role || !pass){
        alert('Preencha todos os campos obrigatórios.');
        return;
      }
      if(role === 'cliente' && !email){
        alert('Informe o e-mail para login de Cliente.');
        return;
      }
      if(role === 'booster' && !cpf){
        alert('Informe o CPF para login de Booster.');
        return;
      }
      alert('Login realizado como '+role+' (simulado)');
    });
  </script>
