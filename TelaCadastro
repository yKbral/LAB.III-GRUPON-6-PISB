<body>
  <div class="panel">
    <h2>Cadastro — Champion Dreams</h2>
    <p>Crie sua conta como <strong>Cliente</strong> ou <strong>Booster</strong>.</p>
    <form id="registerForm" onsubmit="return false;">
      <div>
        <label for="role">Tipo de Usuário</label>
        <select id="role" required>
          <option value="" disabled selected>Selecione...</option>
          <option value="cliente">Cliente</option>
          <option value="booster">Booster</option>
        </select>
      </div>
      <div>
        <label for="nome">Nome Completo</label>
        <input id="nome" type="text" placeholder="Seu nome" required />
      </div>
      <div>
        <label for="email">E-mail</label>
        <input id="email" type="email" placeholder="seu@exemplo.com" required />
      </div>
      <div id="cpfContainer" style="display:none;">
        <label for="cpf">CPF (apenas Boosters)</label>
        <input id="cpf" type="text" placeholder="000.000.000-00" pattern="\\d{3}\\.\\d{3}\\.\\d{3}-\\d{2}" />
      </div>
      <div>
        <label for="senha">Senha</label>
        <input id="senha" type="password" placeholder="••••••••" required minlength="6" />
      </div>
      <div>
        <label for="confirmarSenha">Confirmar Senha</label>
        <input id="confirmarSenha" type="password" placeholder="••••••••" required minlength="6" />
      </div>
      <button id="registerBtn">Cadastrar</button>
      <div class="actions">
        Já possui conta? <a href="#" class="link">Fazer login</a>
      </div>
    </form>
  </div>

  <script>
    const roleSelect = document.getElementById('role');
    const cpfContainer = document.getElementById('cpfContainer');
    const cpfInput = document.getElementById('cpf');

    roleSelect.addEventListener('change',()=>{
      if(roleSelect.value === 'booster'){
        cpfContainer.style.display = 'block';
        cpfInput.required = true;
      } else {
        cpfContainer.style.display = 'none';
        cpfInput.required = false;
      }
    });

    document.getElementById('registerBtn').addEventListener('click',()=>{
      const role = roleSelect.value;
      const nome = document.getElementById('nome').value;
      const email = document.getElementById('email').value;
      const senha = document.getElementById('senha').value;
      const confirmar = document.getElementById('confirmarSenha').value;
      const cpf = cpfInput.value;

      if(!role || !nome || !email || !senha || !confirmar){
        alert('Preencha todos os campos obrigatórios.');
        return;
      }
      if(senha !== confirmar){
        alert('As senhas não coincidem.');
        return;
      }
      if(role === 'booster' && !cpf){
        alert('Informe o CPF para cadastro como Booster.');
        return;
      }
      alert('Cadastro realizado como '+role+' (simulado)');
    });
  </script>
