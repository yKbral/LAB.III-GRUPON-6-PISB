    body{margin:0;background:#0b0b0b;color:#fff;display:flex;align-items:center;justify-content:center;min-height:100vh;padding:24px}

    .panel{
      background:linear-gradient(180deg, rgba(255,255,255,0.02), rgba(255,255,255,0.01));
